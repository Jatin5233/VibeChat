{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "../",               // allow backend + src
    "outDir": "../dist",            // compiled files go into dist/
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "../",               // so paths resolve from project root
    "paths": {
      "@/*": ["src/*"]              // keep same alias as frontend
    }
  },
  "include": [
    "./**/*.ts",
    "../src/**/*.ts"
  ],
  "exclude": ["node_modules", "../dist"]
}